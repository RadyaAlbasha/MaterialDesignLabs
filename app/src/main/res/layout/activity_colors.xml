<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    app:columnCount="4"
    app:rowCount="8"
    tools:context=".screens.colorsscreen.ColorsActivity">

    <Button
        android:id="@+id/buttonC1"
        android:text="#d6cbd3"
        app:layout_column="0"
        app:layout_row="0" />

    <Button
        android:id="@+id/buttonC2"
        android:text="#eca1a6"
        app:layout_column="1"
        app:layout_row="0" />

    <Button
        android:id="@+id/buttonC3"
        android:text="#bdcebe"
        app:layout_column="2"
        app:layout_row="0" />

    <Button
        android:id="@+id/buttonC4"
        android:text="#ada397"
        app:layout_column="3"
        app:layout_row="0" />


    <Button
        android:id="@+id/buttonC5"
        android:text="#D68FAF"
        app:layout_column="0"
        app:layout_row="1" />

    <Button
        android:id="@+id/buttonC6"
        android:text="#470022"
        app:layout_column="1"
        app:layout_row="1" />

    <Button
        android:id="@+id/buttonC7"
        android:text="#669999"
        app:layout_column="2"
        app:layout_row="1" />

    <Button
        android:id="@+id/buttonC8"
        android:text="#FFFFAA"
        app:layout_column="3"
        app:layout_row="1" />


    <Button
        android:id="@+id/buttonC9"
        android:text="#AAAA39"
        app:layout_column="0"
        app:layout_row="2" />

    <Button
        android:id="@+id/buttonC10"
        android:text="#7C83AF"
        app:layout_column="1"
        app:layout_row="2" />

    <Button
        android:id="@+id/buttonC11"
        android:text="#9AA4DF"
        app:layout_column="2"
        app:layout_row="2" />

    <Button
        android:id="@+id/buttonC12"
        android:text="#00ff80"
        app:layout_column="3"
        app:layout_row="2" />


    <Button
        android:id="@+id/buttonC13"
        android:text="#ff8000"
        app:layout_column="0"
        app:layout_row="3" />

    <Button
        android:id="@+id/buttonC14"
        android:text="#00ffff"
        app:layout_column="1"
        app:layout_row="3" />

    <Button
        android:id="@+id/buttonC15"
        android:text="#ffff00"
        app:layout_column="2"
        app:layout_row="3" />


    <Button
        android:id="@+id/buttonC16"
        android:text="#ffe6e6"
        app:layout_column="3"
        app:layout_row="3" />

    <TextView
        android:id="@+id/textViewColor"

        android:gravity="center"
        android:textSize="30sp"
        app:layout_column="0"
        app:layout_columnSpan="4"
        app:layout_columnWeight="4"
        app:layout_row="4"
        app:layout_rowSpan="4"
        app:layout_rowWeight="4" />

</android.support.v7.widget.GridLayout>